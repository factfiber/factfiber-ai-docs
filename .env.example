# FactFiber Documentation System Environment Variables

# Application Environment
ENVIRONMENT=development
DEBUG=true

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8000
SERVER_WORKERS=1
SERVER_RELOAD=true
SERVER_CORS_ORIGINS=["http://localhost:3000","http://localhost:8080"]

# Database Configuration
DATABASE_URL=sqlite:///./ff_docs.db
DATABASE_ECHO=false

# GitHub Integration
GITHUB_TOKEN=your_github_token_here
GITHUB_ORG=factfiber
GITHUB_WEBHOOK_SECRET=your_webhook_secret_here

# Authentication
AUTH_SECRET_KEY=your_secret_key_here_change_in_production
AUTH_ALGORITHM=HS256
AUTH_ACCESS_TOKEN_EXPIRE_MINUTES=30

# OAuth2-Proxy Integration
AUTH_OAUTH2_PROXY_ENABLED=false
AUTH_OAUTH2_PROXY_USER_HEADER=X-Auth-Request-User
AUTH_OAUTH2_PROXY_EMAIL_HEADER=X-Auth-Request-Email
AUTH_OAUTH2_PROXY_GROUPS_HEADER=X-Forwarded-Groups

# MkDocs Configuration
MKDOCS_SITE_NAME=FactFiber Documentation
MKDOCS_SITE_URL=https://docs.factfiber.ai
MKDOCS_THEME=material
MKDOCS_BUILD_DIR=./build
MKDOCS_TEMP_DIR=./temp

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=

# Monitoring
MONITORING_PROMETHEUS_ENABLED=true
MONITORING_PROMETHEUS_PORT=9090
MONITORING_HEALTH_CHECK_ENABLED=true
